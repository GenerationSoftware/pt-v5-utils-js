{
  "include": ["src", "types"],
  "typedocOptions": {
    "entryPoints": ["./src/index.ts"],
    "out": "docs",
    "readme": "DOCUMENTATION.md"
  },
  "compilerOptions": {
    "declaration": true,
    "importHelpers": false,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  }
}
